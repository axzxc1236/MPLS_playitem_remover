<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPLS_playitem_remover"
        mc:Ignorable="d"
        Title="MainWindow" Height="248" Width="211">
    <Grid>
        <Label Content="1. Select MPLS file" Margin="0,10,0,0" RenderTransformOrigin="-0.444,0.936" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="112"/>
        <Button Content="Open file" HorizontalAlignment="Left" Margin="117,13,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <ListBox x:Name="m2tsList" HorizontalAlignment="Left" Height="100" Margin="10,70,0,0" VerticalAlignment="Top" Width="182" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        <Label Content="2. Select a item to remove" HorizontalAlignment="Left" Margin="0,40,0,0" VerticalAlignment="Top"/>
        <Label Content="3. Click &quot;Remove&quot;" HorizontalAlignment="Left" Margin="0,185,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.12"/>
        <Button x:Name="removeButton" Content="Remove" HorizontalAlignment="Left" Margin="117,188,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False"/>

    </Grid>
</Window>
